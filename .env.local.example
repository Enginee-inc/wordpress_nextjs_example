# WordPress API Configuration
NEXT_PUBLIC_WORDPRESS_API_URL=https://your-wordpress-site.azurewebsites.net/wp-json
WORDPRESS_API_URL=https://your-wordpress-site.azurewebsites.net/wp-json/wp/v2

# WordPress Authentication (for preview/draft content)
WORDPRESS_PREVIEW_SECRET=your-preview-secret-key

# Application Password for authenticated requests
WORDPRESS_APPLICATION_USERNAME=your-username
WORDPRESS_APPLICATION_PASSWORD=your-application-password

# Revalidation
REVALIDATE_SECRET_TOKEN=your-revalidation-secret